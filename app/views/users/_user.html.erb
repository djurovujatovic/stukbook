<div class="col-lg-3">
<div class="thumbnail">
<%= link_to user_path(user.username) do %>
<div style="padding: 10px;">
<%= gravatar_tag user.email, size: 200 %>
</div>
<% end %>
<div class="caption">
<h4><%= user.username %></h4>
<% if current_user %>
<p><%= action_buttons(user) %></p>
<% end %>
</div>
</div>
</div>