<div class="container">
<div class="row">
<br/><br/>
  <div class="col-lg-2">

    <div class="row">
      <%= gravatar_tag @user.email, size: 195 %><br/><br/>
      <!-- Friend Zone -->
      <div class="panel panel-default">  
        <div class="panel-heading">Friends <span class="badge"><%= link_to @user.active_friends.size, users_path(people: "friends") %></span>
        </div>
        <div class="panel-body">
          <% @user.active_friends.last(16).each do |user| %>
          <%= link_to user_path(user.username) do %>
            <%= gravatar_tag user.email, size: 40 %>
          <% end %>
          <% end %>
        </div>
      </div>

      
      <p><i class="fa fa-map-marker"></i> Lives in<br/>
      Milwaukee, WI</p>

      <p>Born on</p>

      <h3><%= @user.username %></h3>
      <p>Age: <%= @user.age %> </p>
      <p>Gender: <%= @user.gender %></p>

      <h3>Who am I</h3>
      <small><%= @user.bio %></small>

    </div>
  </div>

  <div class="col-lg-10">
  <div class="row">
  <!-- Post Zone -->
    <div class="col-md-8">
      <%= render "posts/form" %>
      <%= render @posts %>
    </div>

  <!-- Profile Activity -->
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Recent Activity
        </div>
        <div class="panel-body">
          <%= render_activities(@activities) %>
        </div>
      </div>
    </div>

</div>
  </div>

</div>
</div>